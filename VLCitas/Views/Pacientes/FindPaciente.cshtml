@using VLCitas.DataLayer;
@model List<Paciente>
@{
    Layout = null;
}
<div id="searchDIV">
    <input type="text" autofocus id="InputSearch" class="searchFlied" onkeyup="searchInTable('dt_pacientes', 'InputSearch')" placeholder="@Resource.Search">
</div>
<table class="table table-striped table-bordered zero-configuration" id="dt_pacientes">
    <thead>
        <tr>
            <th>@Resource.Name</th>
            <th>@Resource.Phone</th>
            <th>@Resource.Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.nombre))
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.telefono</td>
                <td>
                    <form action="@Url.Action("Detalle", "Pacientes")" method="post">
                        <input type="hidden" value="@item.id" name="id" />
                        <button type="submit" class="btn btn-info"><i class="fa fa-eye"></i> @Resource.See</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>

</table>


<script type="text/javascript">
    $(document).ready(function () {
        $("#searchDIV").find('[autofocus]').focus();
    });
</script>