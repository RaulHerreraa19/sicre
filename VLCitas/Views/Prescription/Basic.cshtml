@using VLCitas.DataLayer;
@{
    Layout = null;
    VLCitas.DataLayer.UsersRepository.DoctorPrescription doctorData = new VLCitas.DataLayer.UsersRepository.DoctorPrescription();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Receta Medica</title>
    <meta name="description" content="receta medica">
    <meta name="author" content="receta medica">
    <link href="~/Content/Prescriptions/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Prescriptions/@ViewBag.Title/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,500;0,600;1,400;1,600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!--  container-fluid --> <!-- //Cambiar a esta clase para quitar los marcos -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2 logo-medic">
                        <img src="~/Content/Prescriptions/Basic/img/RHP-LOGO.png" />
                    </div>
                    <div class="col-md-8 text-center">
                        <p></p>
                        <h2 class="">
                            Dr. @doctorData.name
                        </h2>
                        <h4>@doctorData.specialties</h4>
                        <h5>@doctorData.professional_license</h5> @*<D.G.P. 1342631 8 C.M.C.P. 5924 * CEDULA ESTATAL No.91051>*@
                        <h4><b>@doctorData.job_description</b></h4> @*<RECIEN NACIDOS &#8226; NIÑOS &#8226; ADOLECENTES &#8226; VACUNAS>*@
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
                <div class="line-x"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="space-x">

