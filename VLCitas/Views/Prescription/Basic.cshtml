                        </div>
                    </div>
                </div>
                <div class="line2-x"></div>
                <div class="row">
                    <div class="col-md-5">
                        <h4>
                            @doctorData.consultory_name @*POLICLINICA DEL VALLE*@
                        </h4>
                    </div>
                    <div class="col-md-7">
                        <p>
                            <b>
                                @doctorData.consultory_address  Tels: @doctorData.consultory_phones </br>
                                Tel. @doctorData.phone @doctorData.email
                            </b>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/scripts.js"></script>*@
