@using VLCitas.DataLayer;
@model Servicios
@{
    Layout = null;
}

<form name="frm_edit" id="frm_edit">
    <div class="form-group">
        <span>@Resource.Name:</span> <input type="text" class="form-control" name="nombre" id="nombre" data-rule-required="true" data-msg-required="@Resource.FieldRequired" value="@Model.nombre" />
    </div>
    <div class="form-group">
        <span>@Resource.Description:</span> <input type="text" class="form-control" name="descripcion" id="descripcion" data-rule-required="true" data-msg-required="@Resource.FieldRequired" value="@Model.descripcion" />
    </div>
    <div class="form-group">
        <span>@Resource.Cost:</span> <input type="number" class="form-control" name="precio" id="precio" data-rule-required="true" data-rule-number="true" data-msg-required="@Resource.FieldRequired" value="@Model.precio" />
    </div>
    <input type="hidden" name="id" id="id" value="@Model.id" />
</form>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.js"></script>