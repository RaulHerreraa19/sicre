    <script type="text/javascript">
        var cita_uid = '@Model.uId';
        $(document).ready(function () {
            $("#btn_confirmar").on("click", function () {
                console.log("click on confirmar");
                console.log("uId = " + cita_uid);
                $.ajax({
                    type: "Post",
                    datatype: "html",
                    url: "/Citas/Confirm",
                    data: {
                        uId: cita_uid
                    },
                    cache: false,
                    success: function (Result) {
                        console.log("Succes");
                        console.log(Result);
                        if (Result["TypeOfResponse"] == 0) {
                            swal({
                                title: "Listo!",
                                text: "La cita se ha confirmado correctamente",
                                type: "success",
                                timer: 3000
                            });
                            setTimeout(function(){// wait for 5 secs(2)
                                location.reload(true); // then reload the page.(3)
                            }, 3000);
                        }
                        if (Result["TypeOfResponse"] == 1) {
                            swal("Oops..!", Result["Message"], "error")
                        }
                    },
                    error: function (request, status, error) {
                        console.log("Error");
                        console.log(Result);
                        console.error(request.responseText);

                    },
                    complete: function (xhr, status) {
                        //show_Status_Modal_close_(null);
                    }
                });
            });

            $("#btn_cancelar").on("click", function () {
                $.ajax({
                    type: "Post",
                    datatype: "html",
                    url: "/Citas/Cancel",
                    data: {
                        uId: cita_uid
                    },
                    cache: false,
                    success: function (Result) {
                        if (Result["TypeOfResponse"] == 0) {
                            swal({
                                title: "Listo!",
                                text: "La cita se ha cancelado correctamente",
                                type: "success",
                                timer: 3000
                            });
                            setTimeout(function () {// wait for 5 secs(2)
                                location.reload(true); // then reload the page.(3)
                            }, 3000);
                        }
                        if (Result["TypeOfResponse"] == 1) {
                            swal("Oops..!", Result["Message"], "error")
                        }
                    },
                    error: function (request, status, error) {
                        console.error(request.responseText);
                        alert(request.responseText);
                    },
                    complete: function (xhr, status) {
                        //show_Status_Modal_close_(null);
                    }
                });
            });
        });
